<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Tim cook"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_item_author"
        />

    <at.blogc.android.views.ExpandableTextView
        android:textSize="15sp"
        android:textColor="#808080"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/review_item_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:ellipsize="end"
        app:animation_duration="750"/>

    <!-- Optional parameter animation_duration: sets the duration of the expand animation -->

    <ImageButton
        android:layout_gravity="right"
        android:background="@color/colorWhite"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:padding="10dp"
        android:id="@+id/review_item_expand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>