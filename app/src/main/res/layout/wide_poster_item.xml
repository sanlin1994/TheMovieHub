<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    >
    <ImageView
        android:id="@+id/wide_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:foreground="@drawable/scrim"
        />

    <TextView
        android:id="@+id/upcommingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="The Hunt"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/upcommingPopularity"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="5dp"
        android:drawableRight="@drawable/ic_whatshot_red_24dp"
        android:text="10.99"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/upcommingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="5dp"
        android:drawableRight="@drawable/ic_date_range_black_24dp"
        android:text="20-6-2020"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        />

</androidx.cardview.widget.CardView>
